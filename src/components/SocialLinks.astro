---

<div class="flex gap-2">
  
  {siteConfig.social.email && (
    <a
      href={`mailto:${siteConfig.social.email}`}
      class="text-gray-600 hover:bg-neutral-200 dark:hover:bg-neutral-700 rounded-md"
      aria-label="Email"
    >
      <Fragment set:html={socialIcons.email} />
    </a>
  )}
  {siteConfig.social.bluesky && (
    <a
      href={siteConfig.social.bluesky}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-600 hover:bg-neutral-200 dark:hover:bg-neutral-700 rounded-md"
      aria-label="BlueSky"
    >
      <Fragment set:html={socialIcons.bluesky} />
    </a>
  )}
  {siteConfig.social.github && (
    <a
      href={siteConfig.social.github}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-600 hover:bg-neutral-200 dark:hover:bg-neutral-700 rounded-md"
      aria-label="GitHub"
    >
      <Fragment set:html={socialIcons.github} />
    </a>
  )}
  {siteConfig.social.rss && (
    <a
      href="/rss.xml"
      class="text-gray-600 hover:bg-neutral-200 dark:hover:bg-neutral-700 rounded-md"
      aria-label="RSS Feed"
    >
      <Fragment set:html={socialIcons.rss} />
    </a>
  )}
</div>