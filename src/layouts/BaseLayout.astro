---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ClientRouter, fade, slide } from 'astro:transitions'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Portfolio' } = Astro.props
---

<!doctype html>
<html lang="en" class="min-h-screen flex flex-col">
  <head>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
  </head>
  <body class="text-black dark:text-white  min-h-screen bg-white dark:bg-gray-900 flex-1">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <Header transition:persist />
      <main class="py-2 mb-auto" transition:animate={slide({ duration: '.3s' })}>
        <slot />
      </main>
      <Footer transition:persist />
    </div>
  </body>
</html>
